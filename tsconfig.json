{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src"],

    // ðŸš€ Estas dos lÃ­neas son clave:
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*"],
      "utils/*": ["utils/*"],
      "handlers/*": ["handlers/*"],
      "middleware/*": ["middleware/*"],
      "config/*": ["config/*"],
      "assets-prueba/*": ["assets-prueba/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
